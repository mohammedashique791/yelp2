<% layout('layouts/boilerplate') %>
<div class="mt-3">
<img class="img-fluid" style="width: 110px;height: 110px;" src="/svg/avatar.svg" alt="">

<h1 class="inline-block mx-4" style="display: inline-block;"><%=fonzzi.username%></h1>
</div>
<div>
    <div class="row mt-4">
        <div class="col-6">
            <b>Total No.of Posts:</b> 
        </div>
        <div class="col-6">
            <% let count = 0 %>
            <% for(let c of fonozzi) {%>
                <% if(c.author.username === fonzzi.username) {%>
                    <% count += 1 %>
                    <% } %>
                <% } %>
                <b><%=count%></b>
        </div>
    </div>
    <div class="mt-4 mb-4">
    <a class="btn btn-sm btn-warning" href="/favourites"><b>Surf Your Favourites</b></a>
</div>
    <div class="row mt-4"><h4>Posted By <b>You</b>:</h4></div>
    <% for(let c of fonozzi) {%>
        <% if(c.author.username === fonzzi.username) {%>
            <div class="card mb-3 mt-5">
                <div class="row mb-1">
                    <div class="col-md-4 ">
                        <img class="img-fluid" src="<%=c.image[0].url%>" alt="">
                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title mt-3"><%=c.title%></h5>
                        <p class="card-text"><%=c.description%></p>
                        <p>
                            <small class="text-muted"><%=c.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=c._id%>">View <%=c.title%></a>
                    </div>
                </div>
            </div>
            <% } %>
        <% } %>
</div>
